@import 'normalize.css'
@import 'csshake'

html
  --a #030609
  --b #131619
  --c #232629
  --d #333639
  --e #434649
  --f #535659
  --g #636669
  --h #737679
  --i #838689
  --j #939699
  --k #a3a6a9
  --l #b3b6b9
  --m #c3c6c9
  --n #d3d6d9
  --o #e3e6e9
  --p #f3f6f9

@media (prefers-color-scheme light)
  html
    --static-front var(--p)
    --static-back var(--a)
    --disabled-front var(--d)
    --disabled-back var(--m)
    --default-front var(--p)
    --default-back var(--d)
    --interactable-front var(--p)
    --interactable-back var(--e)
    --hover-front var(--p)
    --hover-back var(--f)
    --active-front var(--p)
    --active-back var(--g)

@media (prefers-color-scheme dark)
  html
    --static-front var(--p)
    --static-back var(--a)
    --disabled-front var(--i)
    --disabled-back var(--e)
    --default-front var(--m)
    --default-back var(--d)
    --interactable-front var(--p)
    --interactable-back var(--e)
    --hover-front var(--p)
    --hover-back var(--f)
    --active-front var(--p)
    --active-back var(--g)

html, body
  height 100vh

body
  display flex
  flex-direction column
  overflow hidden
  font-family 'Sasara Mono Nerd'

@font-face
  font-family 'Sasara Mono Nerd'
  src url('../res/sarasa-mono-sc-nerd-regular.ttf') format('truetype')

.tippy-box[data-theme~='span-charm']
  backdrop-filter blur(1px) brightness(90%)
  color var(--hover-front)
  background-color var(--hover-back)

.tippy-box[data-theme~='span-charm'][data-placement^='top']
  > .tippy-arrow::before
    border-top-color var(--hover-back)

.tippy-box[data-theme~='span-charm'][data-placement^='bottom']
  > .tippy-arrow::before
    border-bottom-color var(--hover-back)

.tippy-box[data-theme~='span-charm'][data-placement^='left']
  > .tippy-arrow::before
    border-left-color var(--hover-back)

.tippy-box[data-theme~='span-charm'][data-placement^='right']
  > .tippy-arrow::before
    border-right-color var(--hover-back)

::selection
  color var(--default-back)
  background-color var(--default-front)