{
  "name": "erajs-next-core",
  "version": "0.1.0",
  "description": "Next-Generation HyperText Game Engine.",
  "main": "src/main.js",
  "scripts": {
    "setup": "npm i",
    "start": "chcp 65001 && npx electron .",
    "check": "npx standard",
    "fix": "npx standard --fix",
    "build": "npx electron-builder --dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miswanting/Era.js.git"
  },
  "author": "Miswanting",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/miswanting/Era.js/issues"
  },
  "homepage": "https://github.com/miswanting/Era.js#readme",
  "devDependencies": {
    "devtron": "latest",
    "electron": "latest",
    "electron-builder": "latest",
    "electron-devtools-installer": "latest",
    "standard": "latest"
  },
  "dependencies": {
    "@popperjs/core": "latest",
    "animate.css": "latest",
    "animejs": "latest",
    "csshake": "latest",
    "d3": "latest",
    "d3-delaunay": "latest",
    "d3-geo-voronoi": "latest",
    "electron-is-dev": "latest",
    "gl-matrix": "latest",
    "hover.css": "latest",
    "normalize.css": "latest",
    "react": "latest",
    "react-dom": "latest",
    "simplex-noise": "latest",
    "three": "latest",
    "tippy.js": "latest",
    "topojson": "latest",
    "versor": "latest",
    "vue": "next",
    "vue-router": "next",
    "vuex": "next"
  },
  "build": {
    "appId": "net.erajs.next",
    "productName": "Era.js",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "../../Game Assets/Engine Icon/icon.png"
    }
  },
  "standard": {
    "globals": [
      "Vue",
      "Vuex",
      "anime",
      "DataManager",
      "DisplayManager",
      "lines",
      "store",
      "components",
      "app",
      "CustomEvent",
      "AST",
      "SimplexNoise",
      "THREE",
      "glMatrix",
      "routes",
      "router",
      "VueRouter",
      "d3"
    ],
    "ignore": [
      "src/old",
      "src/old2"
    ]
  }
}